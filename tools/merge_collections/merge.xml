<tool id="merge_dataset" name="Merge Collection" version="1.0">
  <description>Merge collection into single head to tail file</description>
  <command>
    cat 
    #for $f in $input_list# $f #end for#
    > $output
  </command>
  <inputs>
     <param name="input_list" type="data_collection" label="Collection of files to merge" help="" optional="false" collection_type="list" />
  </inputs>
  <outputs>
    <data name="output" format_source="input_list" ></data>
  </outputs>
  <tests>
  </tests>
  <help>
	Single tool that combines a list collection into a single file
  </help>
  <citations>
  </citations>
</tool>
