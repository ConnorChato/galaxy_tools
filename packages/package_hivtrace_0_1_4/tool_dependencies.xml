<?xml version="1.0"?>
<tool_dependency>
    <package name="python" version="3.4">
      <repository name="package_python_3_4" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="cmake" version="3.2.3">
      <repository  name="package_cmake_3_2_3" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="hyphy" version="2.2.6">
      <repository  name="package_hyphy_2_2_6" owner="nml" prior_installation_required="True" />
    </package>
    <package name="numpy" version="1.10.1">
      <repository  name="package_numpy_1_10_1" owner="nml" prior_installation_required="True" />
    </package>
    <package name="biopython" version="1.66">
      <repository  name="package_biopython_1_66" owner="nml" prior_installation_required="True" />
    </package>
    <package name="hivtrace" version="0.1.4">
        <install version="1.0">
          <actions>
            <action type="set_environment_for_install">
                <repository name="package_hyphy_2_2_6" owner="nml">
                    <package name="hyphy" version="2.2.6" />
                </repository>
                <repository name="package_numpy_1_10_1" owner="nml">
                    <package name="numpy" version="1.10.1" />
                </repository>
                <repository name="package_biopython_1_66" owner="nml">
                    <package name="biopython" version="1.66" />
                </repository>
            </action>
            <action type="setup_virtualenv">https://pypi.python.org/packages/source/b/bioext/bioext-0.9.5.tar.gz
              git+https://github.com/veg/hppy/archive/0.9.6.tar.gz
              git+https://github.com/veg/hivclustering/archive/1.2.3.tar.gz
              git+https://github.com/veg/hivtrace/archive/0.1.4.tar.gz
            </action>
            <action type="set_environment">
              <environment_variable action="prepend_to" name="PYTHONPATH">$INSTALL_DIR</environment_variable>
            </action>
          </actions>
        </install>
        <readme>
This installs hivtrace 0.1.4 (and all its dependencies).

See usage instructions here: https://github.com/veg/hivtrace
        </readme>
    </package>
</tool_dependency>
