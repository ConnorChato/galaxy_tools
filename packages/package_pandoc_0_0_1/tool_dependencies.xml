<?xml version="1.0"?>
<tool_dependency>
	<package name="pandoc" version="0.0.1">
		<install version="1.0">
			<actions>
				<action type="download_by_url" sha256sum="72ace714c2d0eb6d3ae36dbb583ed3b5139ba2ab1b453f52bf003670ccebfaa8">
				https://github.com/JenCabral/galaxy_tool_source/blob/master/plasmid_profiler/pandoc.tar.gz?raw=true</action>			
				<action type="move_file">
					<source>pandoc</source>
					<destination>$INSTALL_DIR</destination>
	            </action>
	            <action type="chmod"><file mode="777">$INSTALL_DIR/pandoc</file></action>
	            <action type="set_environment">
	            	<environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
	            	<environment_variable name="PANDOC_PATH" action="set_to">$INSTALL_DIR</environment_variable>
	            </action>
			</actions>
		</install>
	</package>
</tool_dependency>
